        <style>
            *{
                margin: 0;
                padding: 0;
            }
            .box-hover{
                width: 20%;
                margin: auto;
                background: rgba(0,0,0,.9);
                width: 330px;
                height: 230px;
                
            }
            .box-text{
                width: 300px;
                height: 200px;
                position: relative;
                margin-bottom: 30px;
                margin-left: 15px;
                padding: 15px 0px;
            }
            .box-text h1,p{
                padding: 5px;
                font-family: sans-serif;
            }
            .text{
                background: black;
                height: 200px;
                width: 300px;
                transform: translateX(0px);
                transition: all .2s;
                color: white
            }
            img{
                width: 100%;
                height: 200px;
                object-fit: cover;
                position: absolute;
                margin-top: -200px;
                transform: translateX(0px);
                transition: all .2s;
            }
            .left{
                transform: translateX(-150px);
                transition: all .2s;
            }
            .right{
                transform: translateX(150px);
                transition: all .2s;
            }

        </style>

        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        
        
        <script>






            $(document).ready(function(){
                
                var box = $("#hover");
                var img = $("#img");
                var text = $("#text");
                
                box.click(function(){
                    img.addClass('right');
                    text.addClass('left');
                });
                box.mouseout(function(){
                    img.removeClass('right');
                    text.removeClass('left');
                });                
                text.hover(function(){
                    img.addClass('right');
                    text.addClass('left');
                });
                
            });
            

            
        </script>

